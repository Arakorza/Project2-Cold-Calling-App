<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="100">

    <ImageView
        android:id="@+id/studentPictureDisplay"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="70"
        app:srcCompat="@drawable/white_square">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="30">

        <TextView
            android:id="@+id/studentNameDisplay"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Sebastian Marinescu"
            android:textColor="#ffffff"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/studentCallCount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Times Called: 0"
            android:textColor="#ffffff"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/studentLastCallTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="[00:00:00]"
            android:textColor="#ffffff"
            android:textStyle="bold">
        </TextView>

    </LinearLayout>

</LinearLayout>





